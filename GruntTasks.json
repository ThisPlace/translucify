{
  "__loadNpmTasks__": [
    "grunt-photobox",
    "grunt-contrib-jshint",
    "grunt-http-server"
  ],
  "jshint": {
    "test": {
      "src": [
        "index.js"
      ]
    }
  },
  "photobox": {
    "test": {
      "options": {
        "timeout": 1000,
        "indexPath": "photobox/",
        "screenSizes": ["400"],
        "template": "canvas",
        "urls": ["http://localhost:4000"]
      }
    }
  },
  "http-server": {
    "test": {
      "root": ".",
      "port": "4000",
      "host": "0.0.0.0",
      "runInBackground": true
    },

    "photobox":{
      "root": "./photobox",
      "port": "4000",
      "host": "0.0.0.0",
      "runInBackground": false
    }
  },
  "__gruntTasks__": {
    "default": "jshint,http-server:test,photobox",
    "viewdiff": "http-server:photobox"
  }
}